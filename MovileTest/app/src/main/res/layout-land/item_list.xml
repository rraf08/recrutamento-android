<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/row_heigth"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="E00"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/text_episode_number"
        android:background="@drawable/episode_number"
        android:layout_margin="15dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="9dp"
        android:textSize="21sp"
        android:text=""
        android:textColor="@color/text_color_episode"
        android:gravity="center_vertical"
        android:id="@+id/text_episode_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:numStars="3"
        android:rating="0"
        android:progressTint="@color/rating_bar_color"
        android:layout_gravity="end"
        android:paddingTop="10dp" />

        </LinearLayout>


</LinearLayout>